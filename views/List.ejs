<%- include("Header") -%>

<div class="box" id="heading">
  <h1><%=data.listTitle%></h1>
</div>

<div class="box">
  <% data.listItems.forEach((item)=>{%>
  <div class="item">
    <input type="checkbox" />
    <p><%=item%></p>
  </div>
  <%});%>

  <form action="/" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <button type="submit" name="list" value="<%=data.listTitle%>">
      +
    </button>
  </form>
</div>

<%- include("Footer") -%>
